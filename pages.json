{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/category/category",
			"style": {
				"navigationBarTitleText": "分类"
			}
		},
		{
			"path": "pages/shopcart/shopcart",
			"style": {
				"navigationBarTitleText": "购物车"
			}
		},
		{
			"path": "pages/profile/profile",
			"style": {
				"navigationBarTitleText": "个人中心"
			}
		}, {
			"path": "pages/auth/login",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}

		}
        ,{
            "path" : "pages/auth/register",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uView",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "black",
		"selectedColor": "#35a6e1",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
			"pagePath": "pages/index/index",
			"iconPath": "static/tabar/home.png",
			"selectedIconPath": "static/tabar/home_active.png",
			"text": "首页"
		}, {
			"pagePath": "pages/category/category",
			"iconPath": "static/tabar/category.png",
			"selectedIconPath": "static/tabar/category_active.png",
			"text": "分类"
		}, {
			"pagePath": "pages/shopcart/shopcart",
			"iconPath": "static/tabar/shopcart.png",
			"selectedIconPath": "static/tabar/shopcart_active.png",
			"text": "购物车"
		}, {
			"pagePath": "pages/profile/profile",
			"iconPath": "static/tabar/profile.png",
			"selectedIconPath": "static/tabar/profile_active.png",
			"text": "我"
		}]
	}
}
